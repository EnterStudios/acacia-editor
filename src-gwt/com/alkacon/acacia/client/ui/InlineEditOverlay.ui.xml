<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="main" type="com.alkacon.acacia.client.css.I_LayoutBundle" />
	<ui:style>
		div.overlay{
			position: absolute;
			background: #000000;
			
		}
		@if user.agent ie6 { 
			div.overlay { 
				filter: literal("alpha(opacity = 40)"); 
			}
		} @elif user.agent ie8 { 
			div.overlay { 
				-ms-filter: "alpha(opacity = 40)";
			}
		} @else {
			div.overlay { 
				opacity: 0.4;
			}
		}
		div.main{
			position:absolute;
			top:0px;
			left:0px;
			z-index: 100000;
		}
		div.buttonParent{
			position: absolute;
		}
		div.buttonPanel{
			position:absolute;
			top:0px;
			right: -25px;
			width: 110px;
		}
		div.buttonPanel > div{
			height: 22px;
			position: absolute;
			right: 0px;
			
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.main}">
		<div ui:field="m_overlayTop" class="{style.overlay}" style="top: 0px; left: 0px;" />
		<div ui:field="m_overlayRight" class="{style.overlay}" style="left: 0px; top: 0px;" />
		<div ui:field="m_overlayBottom" class="{style.overlay}" style="top: 0px; left: 0px;" />
		<div ui:field="m_overlayLeft" class="{style.overlay}" style="top: 0px; left: 0px;" />
		<div ui:field="m_buttonBar" class="{style.buttonParent}">
			<div class="{main.form.overlayButtonBar}" /> 
			<g:FlowPanel ui:field="m_buttonPanel" styleName="{style.buttonPanel}"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 